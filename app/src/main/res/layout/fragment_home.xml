<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.HomeFragment">

  <RelativeLayout
      android:id="@+id/topBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="@dimen/_10sdp"
      android:gravity="center"
      android:padding="@dimen/_5sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:textSize="@dimen/_20ssp"/>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="@dimen/_50sdp"
         android:layout_height="@dimen/_30sdp"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="@dimen/_50sdp">
       <ImageView
           android:layout_width="@dimen/_20sdp"
           android:layout_height="@dimen/_20sdp"
           android:src="@drawable/circle"
           android:layout_marginStart="@dimen/_30sdp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/favBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
       <ImageView
           android:id="@+id/img_fav"
           android:layout_width="@dimen/_25sdp"
           android:layout_height="@dimen/_30sdp"
           android:src="@drawable/ic_favorite"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>
     </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_cart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_20sdp"/>
  </RelativeLayout>

  <EditText
      android:id="@+id/edt_search"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_35sdp"
      android:background="@drawable/rounded_bg"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:drawableStart="@drawable/ic_search"
      android:hint="Search"
      android:backgroundTint="@color/light_gray"
      android:padding="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_10sdp"
      app:layout_constraintEnd_toStartOf="@id/topBar"
      app:layout_constraintEnd_toEndOf="@id/topBar"
      app:layout_constraintTop_toBottomOf="@id/topBar"/>


    <TextView
        android:id="@+id/txt_title_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop by Category"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_sans_extrabold"
        app:layout_constraintStart_toStartOf="@id/edt_search"
        app:layout_constraintEnd_toEndOf="@id/edt_search"
        app:layout_constraintTop_toBottomOf="@id/edt_search"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_home_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_title_category"
        app:layout_constraintEnd_toEndOf="@id/txt_title_category"
        app:layout_constraintTop_toBottomOf="@id/txt_title_category"
        android:layout_marginStart="@dimen/_10sdp"
        tools:listitem="@layout/category_design_layout"
        android:layout_marginTop="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
